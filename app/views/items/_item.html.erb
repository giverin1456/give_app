<div class="card">
  <%= link_to image_tag(item.image, class: :card__img ), item_path(id: item.id)%>

  <div class="card__body">
    <%= link_to item.name, item_path(item.id), class: :card__title%>
    <p class="card__summary">
      <%= item.delivery_charge.name %>
    </p>
    <%#= link_to "by #{item.user.name}", user_path(item.user.id),method: :get, class: :card__user %>
  </div>
</div>