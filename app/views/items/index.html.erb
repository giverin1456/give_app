<%= render partial: 'shared/header'%>
<div class='main'>

  <%# 画面上部の「人生を変えるフリマアプリ」帯部分 %>
  <div class='title-contents'>
    <h2 class='service-title'>
      いつでも「 i 」が主人公
    </h2>
    <p class='service-explain'>
      頑張っているあなたを応援します。
    </p>
    <p class='service-explain'>
      さぁGiveを始めよう。
    </p>
    <div class='store-btn'>
      <%= link_to image_tag("app-store.svg", class:"apple-btn"), "#" %>
      <%= link_to image_tag("google-play.png", class:"google-btn"), "#" %>
    </div>
  </div>
  <%# /画面上部の「人生を変えるフリマアプリ」帯部分  %>

  <%# pickupユーザー紹介 %>
  <div class='select-reason-contents'>
    <h2 class='title'>
      今週のPICK UP ショップ!!
    </h2>
    <ul class='reason-lists'>
      <li class='list'>
        <%= image_tag "data:image/jpeg;base64,", class:"list-pict" %>
        <h3 class='reason-list-text'>
          木村一郎さん
          <h4 class= "pickup_shop">smileショップ</h4>
        </h3>
        <p class='reason-list-description'>
          人々が生活していく上で、<br>
          なくてはならない"モノ"を創っています。
        </p>
      </li>
      <li class='list'>
        <%= image_tag "noname.png", class:"list-pict" %>
        <h3 class='reason-list-text'>
          佐藤太郎さん
          <h4 class= "pickup_shop">happyショップ</h4>
        </h3>
        <p class='reason-list-description'>
        コロナ禍でも皆様が笑顔になれるような料理をお届けします！
        </p>
      </li>
      <li class='list'>
        <%= image_tag "https://www.img03.ekiten.jp/image_charge2/32/42679832/staff/s150_20171004232622.jpg", class:"list-pict" %>
        <h3 class='reason-list-text'>
          儀武優樹さん
          <h4 class= "pickup_shop">abc整骨院</h4>
        </h3>
        <p class='reason-list-description'>
          外出ができない方々にお家でもできるエクササイズをオンラインで実施しています！
        </p>
      </li>
    </ul>
  </div>
  <%# pickupユーザー紹介 %>

  <%# ストーリーと商品検索ページボタン%>
  <div class='story-product'>
    <%= link_to image_tag("index.photo.jpg",class: 'story-btn'),search_items_path%>
    <%= link_to image_tag("index.story.jpg",class: 'product-btn'),tweets_path%>
  </div>



  <%# 商品一覧 %>
  <div class='item-contents'>
    <h2 class='title'>注目商品</h2>
    <ul class='item-lists'>

      <% if @items.present? %>
      <% @items.each do |item| %>
      <li class='list'>
        <%= link_to item_path(id: item.id) do %>
        <div class='item-img-content'>
          <%= image_tag(item.image, class: "item-img") %>

          <% if item.order != nil %>
          <div class='sold-out'>
            <span>Sold Out!!</span>
          </div>
          <% end%>
        </div>
        <div class='item-info'>
          <h3 class='item-name'>
            <%= item.name %>
          </h3>
          <div class='item-price'>
            <span>¥<%= item.price %>円<br>
            <%= item.delivery_charge.name %></span>
            <div class='star-btn'>
              <%# <%= image_tag "star.png", class:"star-icon" %>
              <%# <span class='star-count'>0</span> %>
            </div>
          </div>
          <%= link_to "by #{item.user.nickname}", user_path(item.user.id),method: :get, class: :card__user %>
        </div>
        <% end %>
      </li>
      <% end %>

      <% else %>
       <li class='list'>
        <%= link_to '#' do %>
        <%= image_tag "https://tech-master.s3.amazonaws.com/uploads/curriculums/images/Rails1-4/sample.jpg", class: "item-img" %>
        <div class='item-info'>
          <h3 class='item-name'>
            商品を出品してね！
          </h3>
          <div class='item-price'>
            <span>99999999円<br>(税込み)</span>
            <div class='star-btn'>
              <%= image_tag "star.png", class:"star-icon" %>
              <span class='star-count'>0</span>
            </div>
          </div>
        </div>
        <% end %>
      </li>
      <% end %>
      
    </ul>
  </div>
  
  <%# /商品一覧 %>
</div>
<%= link_to(new_item_path, class: 'purchase-btn') do %>
  <span class='purchase-btn-text'>出品する</span>
  <%= image_tag 'icon_camera.png' , size: '185x50' ,class: "purchase-btn-icon" %>
<% end %>
 <%= render partial: "shared/second-footer" %> 